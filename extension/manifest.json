{
  "manifest_version": 3,
  "name": "Focus Pet",
  "version": "1.0.0",
  "description": "Cuide do seu pet virtual mantendo o foco com o m√©todo Pomodoro.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "options_page": "src/options/options.html",
  "permissions": [
    "storage", 
    "alarms", 
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ]
}
